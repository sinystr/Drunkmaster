<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DrunkmasterTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dark_orange</item>

        <!-- Support library compatibility -->
        <item name="background">@color/dark_orange</item>
    </style>

    <style name="orangeButtonRounded">
        <item name="android:background">@drawable/rounded_orange_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="orangeButton">
        <item name="android:background">@color/light_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="orangeText">
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="greyTopLabel">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="greyTopLabelText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
